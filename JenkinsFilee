pipeline {
    agent any
    stages {
        stage('Clean') {
            steps {
                sh "rm -rf PostEx."
                sh "git clone https://github.com/RimshaIsmailSiddiqui/PostEx..git"
                sh "mvn clean -f PostEx."
            }
        }
        stage('Test') {
            steps {
                sh "mvn test -f PostEx."
            }
        }
        stage('Package') {
            steps {
                sh "mvn package -f PostEx."
            }
        }
    }
}
